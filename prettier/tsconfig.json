{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "",
    "rootDir": ".",
    "typeRoots": ["./types", "node_modules/@types"],
    "types": ["node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "removeComments": true,
    "declaration": true
  },
  "include": ["./**/*"],
  "exclude": ["dist"]
}
