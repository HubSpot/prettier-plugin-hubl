{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "",
    "rootDir": ".",
    "typeRoots": ["./types", "../node_modules/@types"],
    "types": ["node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "removeComments": true,
    "declaration": true,
    "allowJs": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["./**/*", "./tests/*"],
  "exclude": ["dist", "node_modules"]
}
